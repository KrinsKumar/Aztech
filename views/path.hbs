<form action="/pathway/4k/{{index}}" method="post">
    {{#each products}}
        <div class="flex flex-col justify-center">
            <div class="relative flex flex-col md:flex-row md:space-x-5 space-y-3 md:space-y-0 rounded-xl shadow-lg p-3 max-w-xs md:max-w-3xl mx-auto border border-white bg-white my-5">
                <div class="w-full md:w-1/3 bg-white grid place-items-center border-2 rounded-xl">
                    <img src="{{image}}" alt="{{productName}}" class="rounded-xl" />
                </div>
                <div class="w-full md:w-2/3 bg-white flex flex-col space-y-2 p-3 justify-between">
                    <div class="flex flex-row justify-between">
                        <h3 class="font-black text-gray-800 md:text-3xl text-xl">{{productName}}</h3>
                        <div class="item-center">
                            {{#if available}}
                            <div class="bg-green-200 px-3 py-1 rounded-full text-xs font-medium text-green-800">
                                In stock
                            </div>
                            {{else}}
                            <div class="bg-red-200 px-3 py-1 rounded-full text-xs font-medium text-red-800">
                                Out of Stock
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <p class="md:text-lg text-gray-500 text-base">{{description}}</p>
                    <div class=" flex flex-row items-center justify-between">
                        <p class="text-xl font-black text-gray-800">
                            ${{price}}
                        </p>
                        <div class="{{#if available}}inline-flex{{else}}hidden{{/if}} w-[150px]">
                            <span class="inline-flex items-center px-3 text-sm bg-urban text-white border border-r-0 border-gray-300 rounded-l-md">
                                Quantity
                            </span>
                            <input type="number" name="{{sku}}" class="rounded-none rounded-r-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}

<div class="flex flex-row justify-center">
    <button type="submit" class="m-auto text-white bg-urban hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
</div>
